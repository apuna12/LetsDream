<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AkcieActivity"
    tools:showIn="@layout/app_bar_admin">

    <Button
        android:id="@+id/buttonOdoslMail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Odoslať email"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/timeTW"
        app:layout_constraintStart_toStartOf="@+id/full_dateTW"
        app:layout_constraintTop_toBottomOf="@+id/full_dateTW" />

    <Button
        android:id="@+id/buttonZalohaDB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Zálohovať databázu"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/buttonOdoslMail"
        app:layout_constraintStart_toStartOf="@+id/buttonOdoslMail"
        app:layout_constraintTop_toBottomOf="@+id/buttonOdoslMail" />

    <Button
        android:id="@+id/buttonZmazatDB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Vymazať databázu"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/buttonOdoslMail"
        app:layout_constraintStart_toStartOf="@+id/buttonOdoslMail"
        app:layout_constraintTop_toBottomOf="@+id/buttonZalohaDB" />

    <Button
        android:id="@+id/buttonIssue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Odoslať pripomienky k aplikácii"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/buttonOdoslMail"
        app:layout_constraintStart_toStartOf="@+id/buttonOdoslMail"
        app:layout_constraintTop_toBottomOf="@+id/buttonZmazatDB" />


    <ImageView
        android:id="@+id/logo_letsdream"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_letsdream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/timeTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="HH:MM"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_letsdream" />

    <TextView
        android:id="@+id/full_dateTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="40dp"
        android:text="dd.MM.YYYY"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_letsdream" />


</android.support.constraint.ConstraintLayout>